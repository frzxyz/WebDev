datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int       @id @default(autoincrement()) // Integer autoincrement ID
  email       String    @unique
  username    String    @unique
  password    String?
  isSuspended Boolean   @default(false)
  createdAt   DateTime  @default(now())
  role        Role      @relation(fields: [roleId], references: [id])
  roleId      Int
  reviews     Review[]
}


model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model Drama {
  id           Int      @id @default(autoincrement())
  title        String
  alternativeTitle String?
  urlPhoto     String?
  year         Int
  countryId    Int
  country      Country   @relation(fields: [countryId], references: [id])
  synopsis     String?
  availability String
  genres       Genre[]
  actors       Actor[]
  trailerLink  String?
  awards       Award[]   // Relation to awards
  rating       Float?
  reviews      Review[]
  views        Int
  duration     Int
}

model Genre {
  id     Int    @id @default(autoincrement())
  name   String
  description String?
  dramas Drama[]
}

model Actor {
  id       Int    @id @default(autoincrement())
  name     String
  photo    String?
  dramas   Drama[]
  country  Country @relation(fields: [countryId], references: [id])  // Relation to Country
  countryId Int
}

model Review {
  id       Int      @id @default(autoincrement())
  userName String
  rating   Int
  comment  String
  date     DateTime @default(now())
  drama    Drama    @relation(fields: [dramaId], references: [id])
  dramaId  Int
  user     User     @relation(fields: [userId], references: [id])
  userId   Int   // Ubah ke String
}

model Award {
  id       Int    @id @default(autoincrement())
  name     String
  year     Int
  drama    Drama   @relation(fields: [dramaId], references: [id])
  dramaId  Int
  country  Country @relation(fields: [countryId], references: [id])  // Relation to Country
  countryId Int
}

model Country {
  id       Int     @id @default(autoincrement())
  name     String
  dramas   Drama[]
  awards   Award[]
  actors   Actor[]  // Add reverse relation to Actor
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  email     String
  token     String   @unique
  createdAt DateTime @default(now())
  expiration DateTime
  userId    Int?     // Optional foreign key to link to the User
}